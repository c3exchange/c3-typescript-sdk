{
  "extends": "../../base-tsconfig.json",
  "compilerOptions": {
    "lib": [ "dom", "dom.iterable", "esnext" ],
    "module": "esnext",
    "target": "es2015",
    "jsx": "react-jsx",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": false,
    "declarationMap": false
  },
  "exclude": [
    "test/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "build",
    "dist",
    ".buildinfo"
  ],
  "include": [
    "src/**/*"
  ],
  "references": [
    {
      "path": "../common/tsconfig.build.json"
    }
  ]
}
